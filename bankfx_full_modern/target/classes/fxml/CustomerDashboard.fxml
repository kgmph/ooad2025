<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" alignment="CENTER"
      styleClass="card"
      stylesheets="@../css/style.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bank.controller.CustomerDashboardController">

    <Label fx:id="welcome" styleClass="label-title"/>

    <Button text="Create Bank Account" onAction="#createAccount" maxWidth="250"/>
    <Button text="View My Accounts" onAction="#viewAccounts" maxWidth="250"/>

    <Button text="Logout" onAction="#logout" maxWidth="250"/>

</VBox>
